<script>
  function transferZen() {
  var xhttp = new XMLHttpRequest();
  document.getElementById("status").innerHTML = "Transaction sent....Awaiting Response";
  var address = encodeURIComponent(document.getElementById("kisaan").value);
  var dealer = encodeURIComponent(document.getElementById("dealeraddress").value);
  var amount = encodeURIComponent(document.getElementById("amount").value);
  var parameters = "address=" + address + "&dealer=" + dealer + "&amount=" + amount;

  xhttp.onreadystatechange = function() {
    if (this.readyState == 4 && this.status == 200) {
      if(xhttp.responseText == -1){

      }
      else{
        var res = JSON.parse(xhttp.responseText);
        document.getElementById("status").innerHTML = "Transaction successful";
        console.log("Status", res.status);
      }
    }
  }

    xhttp.open("POST", "/claimFertIssue", true);
		xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
		xhttp.send(parameters);
}
</script>
