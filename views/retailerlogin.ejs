<script>
	var tbody = document.getElementById('transaction_list');
	var thead = document.getElementById('transaction_header');
	var transactionToArray="<%= transactionToArray%>".split(',');
	var transactionAmountArray="<%= transactionAmountArray%>".split(',');
	for (i = 0; i < transactionToArray.length; ++i) {
		var tr = "<tr>";
		tr += '<td style="display:block;">' + transactionToArray[i] + "</td><td>"+ transactionAmountArray[i] +'</tr>';
		thead.innerHTML = '<tr><th>Transaction To</th><th>Transaction Amount</th></tr>';
		tbody.innerHTML = tr + tbody.innerHTML;
	}
