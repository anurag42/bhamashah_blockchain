<script>
	var tbody = document.getElementById('kisaan_list');
	var thead = document.getElementById('kisaan_header');
	var kisaan="<%= kisaanList%>";
	var kisaanList=kisaan.split(',');
	var kisaanAadharList= "<%=kisaanAadharList%>".split(',');
	console.log(kisaanList.length);
	for (i = 0; i < kisaanList.length; ++i) {
		var tr = "<tr>";
		tr += '<td style="display:block;">' + kisaanList[i] + "</td><td>" + '<input type="checkbox" id="checkbox" onchange="enableTxtbx('+kisaanAadharList[i]+')">'+ "</td><td>"+'<input disabled="" id='+kisaanAadharList[i]+' type="number" placeholder="Enter Amount">'+"</td><td>"+'<button href='+kisaanAadharList[i]+' class="viewbtn" onclick="getTradeDetails(this)"><img src="/images/View.png" class="viewimg">Send RAJTokens</button><img src="/images/loader.gif" class="loaderbtngif"></td></tr>';
		thead.innerHTML = '<tr><th>Kisaan Name</th><th>Select Farmer</th><th>Input Amount</th><th>Pay Kisaan</th></tr>';
		tbody.innerHTML = tr + tbody.innerHTML;
		// $('#checkbox').change(function(){
	  //  $("#amountBox").prop("disabled", !$(this).is(':checked'));
		// });
	}
	function getTradeDetails(obj){
		document.getElementById('kisaanAddress').value = obj.getAttribute("href");
		document.getElementById('amount').value = 45;
		document.getElementById('myform').submit();
	}
	$(document).ready(function(){
		$('[data-toggle="popover"]').popover();
	});
	function enableTxtbx(kal){

			$('#'+kal).prop("disabled", false);

	}
